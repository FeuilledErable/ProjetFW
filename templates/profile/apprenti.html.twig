{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        #apprenti-identity {
            margin-bottom: 5vh;
        }
    </style>

{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <div id="apprenti-identity" class="card">
            <div class="card-body">
                <h2 class="card-title">{{ apprenti.username }}</h2>
                <p class="card-subtitle">{{ apprenti.nom }} {{ apprenti.prenom }}</p>
            </div>
        </div>
        <div id="apprenti-atelier">
            <h2>Mes Ateliers</h2>
            <p>Nombre d'atelier : {{ ateliers|length }}</p>
            {% for atelier in ateliers %}
                {{ include('layers/_list.html.twig') }}
            {% endfor %}
        </div>
    </div>
{% endblock %}
